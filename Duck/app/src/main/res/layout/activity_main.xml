<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/ImageText_description"
        android:scaleType="centerCrop"
        android:src="@drawable/duck" />
    <LinearLayout
        android:id="@+id/defs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/ImageText_padding"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="@dimen/ImageText_def_marginBottom"
        >
        <TextView
            android:id="@+id/imgDef1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/ImageText_size"
            android:text="@string/ImageText_text"/>
        <TextView
            android:id="@+id/imgDef2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/ImageText_size"
            android:text="@string/ImageText_text2"/>
    </LinearLayout>


</FrameLayout>